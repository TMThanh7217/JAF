<div id="carouselId" class="carousel slide mx-5 my-3" data-ride="carousel">
  <ol class="carousel-indicators">
    <li data-target="#carouselId" data-slide-to="0" class="active"></li>
    {{#each dataSlide}}
    <li data-target="#carouselId" data-slide-to="{{this}}"></li>
    {{/each}}
  </ol>
  <div class="carousel-inner" role="listbox">
    <div class="carousel-item active">
      <img src="{{mostLiked.src}}" alt="First slide" width="100%" style="max-height: 800px;">
      <div class="carousel-caption d-none d-md-block">
        <h3>Recommend</h3>
        <p>{{mostLiked.detail}}</p>
      </div>
    </div>
    {{#each recProducts}}
    <div class="carousel-item">
      <img src="{{this.src}}" alt="Nth slide" width="100%" style="max-height: 800px;">
      <div class="carousel-caption d-none d-md-block">
        <h3>Recommend</h3>
        <p>{{this.detail}}</p>
      </div>
    </div>
    {{/each}}
  </div>
  <a class="carousel-control-prev" href="#carouselId" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#carouselId" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>


<div class="container-fluid p-5">
  <div id="food_menu">
      <div class="menu-label mb-3 p-2">
          <h1 class="ml-2">Some Foods</h1>
      </div>
      <div class="row card-group">
          {{#if (isAdmin userAuthorization)}}
          {{#each pre_foods}}
          {{> product-card product=this userAuthor=1}}
          {{/each}}
          {{else if (isCommon userAuthorization)}}
          {{#each pre_foods}}
          {{> product-card product=this userAuthor=0}}
          {{/each}}
          {{else}}
          {{#each pre_foods}}
          {{> product-card product=this userAuthor=-1}}
          {{/each}}
          {{/if}}
      </div>
  </div>
  <button class="btn btn-danger btn-large btn-seemore mx-auto mb-3" onclick="document.location.href='/products?category=0'">See more</button>
</div>

