<div class="container-fluid p-5">
  <div id="food_menu">
      <div class="menu-label mb-3 p-2">
          <h1 class="ml-2">Some Foods</h1>
      </div>
      <div class="row card-group">
          {{#each pre_foods}}
              <div class="col-sm-12 col-md-12 col-lg-4 g-mb-30 tb-cell">
                  <div class="card u-shadow-v18 g-bg-white text-center rounded g-px-20 g-py-40 g-mb-5 h-100">
                      <div class="card-header d-flex align-items-center justify-content-center g-bg-white">
                          <img class="img-thumbnail" src={{this.src}} alt="">
                      </div>
                      <div class="card-body d-flex flex-column">
                          <h4 class="h5 g-color-black g-font-weight-600 g-mb-10 mt-0 mb-3">{{this.name}}</h4>
                          <p>{{this.detail}}</p>
                          <span class="d-block g-color-primary g-font-size-16 mb-3 mt-auto price">${{this.price}}</span>
                          <button class="btn btn-lg btn-block btn-order mb-2 mx-auto" type="button">Order Now</button>
                      </div>
                  </div>
              </div>
          {{/each}}
      </div>
  </div>
  <button class="btn btn-danger btn-large btn-seemore mx-auto mb-3" onclick="document.location.href='/foods'">See more</button>
</div>

