<div class="pb-5">
  <div class="container" id="switch-btn-container">
    <button class="switch-btn btn btn-danger" onclick="switchProductManageDisplay()">Switch</button>
  </div>
  <div class="container" id="add-product" style="display: none;">
    <div class="row">
      <div class="col-12"><h2>Add product</h2></div>
    </div>

    <div class="row">
      <div class="col-6">
        <img src="../images/drink/cappuccino.jpg" alt="" class="img-fluid img-thumbnail">
        <div class="form-group">
          <label for=""></label>
          <input type="file" class="form-control-file" name="" id="" placeholder="" aria-describedby="fileHelpId">
        </div>
        <button type="submit" class="btn btn-danger text-uppercase btn-block mt-2">Upload image</button>
      </div>
      <div class="col-6">
        <form action="">
          <div class="form-group">
            <label for="product_name">Product name:</label>
            <input id="product_name" name="product_name" type="text" class="form-control validate" placeholder="Cappuccino" required>
            <label for="type">Type:</label>
            {{!-- <input id="type" name="type" type="text" class="form-control validate" placeholder="Drink" required> --}}
            <select class="custom-select" id="product-type">
                  <option value="1">Drink</option>
                  <option value="2">Food</option>
            </select>
          </div>
          <div class="form-group">
            <label for="description">Description:</label><br>
            <textarea id="description" name="description" class="form-control validate" placeholder="Lorem ipsum dolor sit, amet consectetur adipisicing elit. Sit saepe molestias magnam exercitationem facere sunt nobis, excepturi eligendi facilis quis." required></textarea>
          </div>
          <div class="form-group">
            <label for="price">Price:</label>
            <input id="price" name="price" type="number" class="form-control validate" placeholder="20" required>
          </div>
          <div class="form-group">
            <div class="row">
              <div class="col-6">
                <label for="quantity">Quantity: </label>
                <input id="quantity" name="quantity" type="number" class="form-control validate" placeholder="11" required>
              </div>
              <div class="col-6">
                <label for="status">Status: </label>
                <!--<input id="status" name="status" type="text" class="form-control validate" placeholder="In stock" required>-->
                <select class="custom-select" id="status">
                  <option value="1">In stock</option>
                  <option value="2">Out of stock</option>
                </select>
              </div>
            </div>
          </div>
        </form>
      </div>
      <div class="col-12 mt-2">
        <button type="submit" class="btn btn-danger text-uppercase btn-block">Confirm</button>
      </div>
    </div>
  </div>

  <div class="container" id="search-product" >
    <div class="row">
      <div class="col-2">
          <div class="list-group" id="categories">
              <button class="list-group-item" onclick="document.location.href='/manage_product'">Menu</button>
              <button class="list-group-item" onclick="document.location.href='/manage_product_food'">Food</button>
              <button class="list-group-item" onclick="document.location.href='/manage_product_drink'">Drink</button>
          </div>
      </div>
      <div class="col-10 bg-white rounded shadow-sm mb-5">
        
        <table class="table table-responsive" style="text-align:center;">
          <thead>
            <tr>
              <th class="border-0 bg-light" >
                <div class="p-2 px-3 text-uppercase">Product</div>
              </th>
              <th scope="col" class="border-0 bg-light" >
                <div class="py-2 text-uppercase">ID</div>
              </th>
              <th scope="col" class="border-0 bg-light" >
                <div class="py-2 text-uppercase">Price</div>
              </th>
              <th scope="col" class="border-0 bg-light" >
                <div class="py-2 text-uppercase">Status</div>
              </th>
              <th scope="col" class="border-0 bg-light" >
                <div class="py-2 text-uppercase">Quantity</div>
              </th>
              <th scope="col" class="border-0 bg-light" >
                <div class="py-2 text-uppercase">Delete</div>
              </th>
            </tr>
          </thead>
          {{#each product}}
          <tbody>
            <tr>
              <td class="border-0">
                <div>
                  <img src={{this.src}} alt="" class="img-fluid img-thumbnail rounded shadow-sm" style="max-height: 300px;">
                  <div class="d-flex justify-content-center align-middle">
                    <h5 class="mb-0"> <input class="border-0" type="text" placeholder="Name: {{this.name}}" style="font-weight: bold;"></input></h5>
                    <input class="border-0 text-muted font-weight-normal font-italic d-block" placeholder="Type: {{this.type}}" style="font-weight: bold;"></input>
                  </div>
                </div>  
              </td>
              <td class="border-0 align-middle" style="width: 10%;">
                <input class="border-0" type="text" placeholder="{{this.id}}" size="3" style="text-align: center; font-weight: bold;"></input>
              </td>
              <td class="border-0 align-middle" style="width: 10%;">
                <input class="border-0" type="text" placeholder="{{this.price}}" size="5" style="text-align: center; font-weight: bold;"></input>
              </td>
              <td class="border-0 align-middle" style="width: 10%;">
                <input class="border-0" type="text" placeholder="{{this.status}}" size="4" style="text-align: center; font-weight: bold"></input>  
              </td>
              <td class="border-0 align-middle" style="width: 20%;">
                <input class="border-0" type="text" placeholder="{{this.stock}}" size="5" style="text-align: center; font-weight: bold"></input>  
              </td>
              <td class="border-0 align-middle" style="width: 10%;"><a href="#" class="text-dark"><i class="fa fa-trash"></i></a></td>
            </tr>
          </tbody>
          {{/each }}
        </table>

        <!-- End -->
      </div>
    </div>
  </div>
</div>
