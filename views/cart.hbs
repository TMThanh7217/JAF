<div class="pb-5">
    <div class="container">
      <div class="row">
        <div class="col-lg-12 p-5 bg-white rounded shadow-sm mb-5">

          <!-- Shopping cart table -->
          <div class="table-responsive">
            <table class="table">
              <thead>
                <tr>
                  <th scope="col" class="border-0 bg-light">
                    <div class="p-2 px-3 text-uppercase">Product</div>
                  </th>
                  <th scope="col" class="border-0 bg-light">
                    <div class="py-2 text-uppercase">Price</div>
                  </th>
                  <th scope="col" class="border-0 bg-light">
                    <div class="py-2 text-uppercase">Quantity</div>
                  </th>
                  <th scope="col" class="border-0 bg-light">
                    <div class="py-2 text-uppercase">Remove</div>
                  </th>
                </tr>
              </thead>
              <tbody>
                {{#each cart.items}}
                <tr>
                  <th scope="row" class="border-0">
                    <div class="p-2">
                      <img src="{{this.item.src}}" alt="" width="70" class="img-fluid rounded shadow-sm">
                      <div class="ml-3 d-inline-block align-middle">
                        <h5 class="mb-0"> <a href="/products/{{this.item.id}}" class="text-dark d-inline-block align-middle">{{this.item.name}}</a></h5><span class="text-muted font-weight-normal font-italic d-block">Category: Fast Food</span>
                      </div>
                    </div>
                  </th>
                  <td class="border-0 align-middle"><strong>${{this.price}}</strong></td>
                  <td class="border-0 align-middle"><strong>{{this.quantity}}</strong></td>
                  <td class="border-0 align-middle"><button class="btn btn-light btn-cart--remove" data-id={{this.item.id}}><i class="fas fa-trash"></i></button></td>
                </tr>
                {{/each}}
              </tbody>
            </table>

              <p><b id="emptyCartMess"style="font-size: 3rem;">{{#if isEmpty}}Your cart is empty. Please add at least one product to order!{{/if}}</b></p>
            
          </div>
          <!-- End -->
        </div>
      </div>

      <div class="row py-5 p-4 bg-white rounded shadow-sm">
        <div class="col-lg-6">
          <div class="bg-light rounded-pill px-4 py-3 text-uppercase font-weight-bold">Coupon code</div>
          <div class="p-4">
            <p class="font-italic mb-4">If you have a coupon code, please enter it in the box below</p>
            <div class="input-group mb-4 border rounded-pill p-2">
              <input type="text" placeholder="Apply coupon" aria-describedby="button-addon3" class="form-control border-0">
              <div class="input-group-append border-0">
                <button id="button-addon3" type="button" class="btn btn-danger px-4 rounded-pill"><i class="fa fa-gift mr-2"></i>Apply coupon</button>
              </div>
            </div>
          </div>
          <div class="bg-light rounded-pill px-4 py-3 text-uppercase font-weight-bold">Instructions for seller</div>
          <div class="p-4">
            <p class="font-italic mb-4">If you have some information for the seller you can leave them in the box below</p>
            <textarea name="" cols="30" rows="2" class="form-control"></textarea>
          </div>
        </div>
        <div class="col-lg-6">
          <div class="bg-light rounded-pill px-4 py-3 text-uppercase font-weight-bold">Order summary </div>
          <div class="p-4">
            <p class="font-italic mb-4">Shipping and additional costs are calculated based on values you have entered.</p>
            <ul class="list-unstyled mb-4">
              <li class="d-flex justify-content-between py-3 border-bottom"><strong class="text-muted">Order Subtotal </strong><strong style="font-weight: bold; font-size:20px">$<span id="totalPrice" style="font-weight: bold; font-size:20px">{{cart.totalPrice}}</span></strong></li>
              <li class="d-flex justify-content-between py-3 border-bottom"><strong class="text-muted">Shipping and handling</strong><strong style="font-weight: bold; font-size:20px">$<span id="tax" style="font-weight: bold; font-size:20px">{{tax}}</span></strong></li>
              <li class="d-flex justify-content-between py-3 border-bottom"><strong class="text-muted">Total</strong>
                <h5 class="font-weight-bold">$<span id="realPrice" class="h5" style="font-weight: bold">{{realPrice}}</span></h5>
              </li>
            </ul>
            {{#if isEmpty}}
            <a href="#" class="btn btn-danger rounded-pill py-2 btn-block" data-toggle="modal" data-target="#errorEmptyCartModal">Procceed to checkout</a>
            {{> empty-cart-error-modal}}       
            {{else if (isAnonymous userAuthorization)}}
            <a href="#" class="btn btn-danger rounded-pill py-2 btn-block" data-toggle="modal" data-target="#requireLoginModal">Procceed to checkout</a>
            {{> login-require-modal}} 
            {{else}}
            <a href="#" class="btn btn-danger rounded-pill py-2 btn-block" data-toggle="modal" data-target="#confirmModal">Procceed to checkout</a>
            {{> confirm-payment-modal}}
            {{/if}}
          </div>
        </div>
      </div>
    </div>
  </div>
</div>