    <div class="container mx-5 my-2 justify-content-end ">
      <div class="row m-0">
        <div class="col-4 ">
          <ul style=" list-style-type: none">
            <li class="active my-3" style="font-size:20px;"><a href="/profile">
            <i class="fa fa-users">My Account</i></a></li>
            <li class="my-3" style="font-size:20px;"><a href="/coupon">
            <i class="fa fa-ticket" style="color:black">My Coupon</i></a></li>
            <li class="my-3" style="font-size:20px;"><a href="/notifications">
            <i class="fa fa-bell" style="color:black">My Notifications</i></a></li>
          </ul>
        </div>

      <div class="col-8" style="border: 1px solid white">
        <h4><small>Your Information</small></h4>
        <hr>
        <form >
          <div class="form-group">
            <label for="exampleFormControlInput1">Full Name</label>
            <input type="text" class="form-control" id="name-field" value="{{user.name}}" disabled>
          </div>
          <div class="form-group">
            <label for="exampleFormControlInput1">Email address</label>
            <input type="email" class="form-control" id="email-field" value="{{user.email}}" disabled>
          </div>
          <div class="form-group">
            <label for="exampleFormControlSelect1">Gender: </label>
            <div class="form-check form-check-inline">
              {{#if user.gender}}
              <input class="form-check-input mx-2" type="radio" name="male-btn-checked" id="male-btn-checked" value="m" checked disabled>
              {{else}}
              <input class="form-check-input mx-2" type="radio" name="male-btn-unchecked" id="male-btn-unchecked" value="m" disabled>
              {{/if}}
              <label class="form-check-label" for="inlineRadio1">Male</label>
            </div>
            <div class="form-check form-check-inline">
              {{#if user.gender}}
              <input class="form-check-input" type="radio" name="female-btn-unchecked" id="female-btn-unchecked" value="f" disabled>
              {{else}}
              <input class="form-check-input" type="radio" name="female-btn-checked" id="female-btn-checked" value="f" checked disabled>
              {{/if}}
              <label class="form-check-label" for="inlineRadio2">Female</label>
          </div>
          <div class="form-group">
            <label for="exampleFormControlSelect2">Phone Number</label>
            <input type="number" class="form-control" id="phone-field" value="{{user.phone}}" disabled>
          </div>
          <button type="button" id="edit-prof-btn" class="btn btn-warning btn-lg" onclick="edit()">Edit</button>      
          <button type="button" id="update-prof-btn" class="btn btn-warning btn-lg" onclick="update()" style="display: none">Update</button>      
          </div>
        </form>
        <br><br>
      </div>
    </div>
    </div>

<script>
  var nf = document.getElementById('name-field');
  var ef = document.getElementById('email-field');
  var pg = document.getElementById('phone-field');
  var mc = document.getElementById('male-btn-checked');
  var muc = document.getElementById('male-btn-unchecked');
  var fc = document.getElementById('female-btn-checked');
  var fuc = document.getElementById('female-btn-unchecked');
  var editBtn = document.getElementById('edit-prof-btn');
  var updateBtn = document.getElementById('update-prof-btn');
  
  function edit() {
    nf.removeAttribute('disabled');
    ef.removeAttribute('disabled');
    pg.removeAttribute('disabled');
    if (mc != null)
      mc.removeAttribute('disabled');
    else muc.removeAttribute('disabled');
    if (fc != null)
      fc.removeAttribute('disabled');
    else fuc.removeAttribute('disabled');
    editBtn.style.display = "none";
    updateBtn.style.display = "block";
  }

  function update() {
    editBtn.style.display = "block";
    updateBtn.style.display = "none";
    nf.setAttribute('disabled', true);
    ef.setAttribute('disabled', true);
    pg.setAttribute('disabled', true);
    if (mc != null)
      mc.setAttribute('disabled', true);
    else muc.setAttribute('disabled', true);
    if (fc != null)
      fc.setAttribute('disabled', true);
    else fuc.setAttribute('disabled', true);
  }
</script>